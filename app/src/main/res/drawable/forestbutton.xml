<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape>
                <solid
                    android:color="@color/clickForest" />
                <stroke
                    android:width="0dp"
                    android:color="@color/colorPrimary" />
                <corners
                    android:radius="3dp" />
                <padding
                    android:right="1dp"
                    android:bottom="1dp"
                    android:left="1dp"
                    android:top="1dp"/>
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="@color/startColorForest"
                    android:endColor="@color/endColorForest"
                    android:angle="270" />
                <stroke
                    android:width="0dp"
                    android:color="@color/primForest" />
                <corners
                    android:radius="3dp" />
                <padding
                    android:left="1dp"
                    android:top="1dp"
                    android:right="1dp"
                    android:bottom="1dp" />
            </shape>
        </item>
</selector>